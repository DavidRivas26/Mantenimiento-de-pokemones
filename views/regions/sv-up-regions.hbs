<div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">

    <div class="card mt-5">
      <div class="card-header bg-dark text-white">
        {{#if editMode}}Edicion{{else}}Creacion{{/if}} de regiones
      </div>
      <div class="card-body">

        <form method="POST" action="{{#if editMode}}/edit-regions{{else}}/create-regions{{/if}}">
          <div class="mb-3">
            <label for="name" class="form-label">Nombre:</label>
            <input type="text" class="form-control" id="name" name="Name" value="{{#if editMode}}{{region.name}}{{/if}}" />
          </div>        

          {{#if editMode}}

          <input type="hidden" name="regionId" value="{{region.id}}">
          
          {{/if}}

          <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
           <a href="/regions" type="button" class="btn btn-warning">volver atras</a>
        </form>

      </div>
    </div>

  </div>
  <div class="col-md-6"></div>

</div>